<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=\, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header
      class="d-flex justify-content-between align-items-baseline bg-success"
    >
      <div>
        <a href="#" class="fs-1 text-decoration-none fw-bold">Event</a>
      </div>
      <nav class="">
        <ul style="list-style-type: none" class="d-flex justify-content-around">
          <li>
            <a href="/">
              <button type="button" class="fs-6 btn btn-primary mt-0">
                Home
              </button>
            </a>
          </li>

          <li>
            <a href="/event">
              <button type="button" class="fs-6 btn btn-info mt-0">
                Events
              </button>
            </a>
          </li>
          <li>
            <a href="/gallery">
              <button type="button" class="ms-1 fs-6 btn btn-secondry">
                Gallery
              </button>
            </a>
          </li>
          <li>
            <a href="/about">
              <button type="button" class="ms-1 fs-6 btn btn-warning">
                About Us
              </button>
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <div class="d-flex justify-content-between align-items-center mx-5">
        <section>
          <% events.forEach(event=>{ %>
          <h2><%= event.title%></h2>
          <p><%= event.summary%></p>
          <a href="/event/<%= event._id%>">
            <button class="btn btn-success">Show</button>
          </a>
          <a href="/event/<%=event._id%>/delete"
            ><button class="btn btn-danger">Delete</button>
          </a>

          <% })%>
        </section>
        <section>
          <form action="/event" method="post">
            <input class="mt-3" type="text" name="title" placeholder="Titile" />
            <textarea
              class="mt-3 rounded-pill ps-3 pt-2"
              type="text"
              name="summary"
              cols="52"
              rows=""
              placeholder="Summary"
            ></textarea>
            <input class="mt-3" type="text" name="host" placeholder="Host" />
            <input
              class="mt-3"
              type="date"
              name="startDate"
              placeholder="Start-Date"
            />
            <input
              class="mt-3"
              type="date"
              name="endDate"
              placeholder="End-Date"
            />
            <input
              class="mt-3"
              type="text"
              name="category"
              placeholder="category"
            />
            <input
              class="mt-3"
              type="text"
              name="location"
              placeholder="Location"
            />
            <button class="mt-3 rounded-pill ms-5" type="submit">Submit</button>
          </form>
        </section>
      </div>
    </main>
    <footer class="p-3 mb-2 bg-info text-dark text-center">
      &copy; All CopyRights Reserved 2023
    </footer>
  </body>
</html>
